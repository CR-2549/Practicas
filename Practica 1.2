def encriptar_mensaje(mensaje):
    diccionario = {
        'a': '@1', 'b': '#2', 'c': '$3', 'd': '%4', 'e': '&5',
        'f': '*6', 'g': '!7', 'h': '?8', 'i': '+9', 'j': '-0',
        'k': '=1', 'l': '@2', 'm': '#3', 'n': '$4', 'o': '%5',
        'p': '&6', 'q': '*7', 'r': '!8', 's': '?9', 't': '+0',
        'u': '-1', 'v': '=2', 'w': '@3', 'x': '#4', 'y': '$5',
        'z': '&6', ' ': '_'
    }

    mensaje_encriptado = ''
    for letra in mensaje.lower():
        if letra in diccionario:
            mensaje_encriptado += diccionario[letra]
        else:
            mensaje_encriptado += letra
    return mensaje_encriptado


def desencriptar_mensaje(mensaje_encriptado):
    diccionario = {
        '@1': 'a', '#2': 'b', '$3': 'c', '%4': 'd', '&5': 'e',
        '*6': 'f', '!7': 'g', '?8': 'h', '+9': 'i', '-0': 'j',
        '=1': 'k', '@2': 'l', '#3': 'm', '$4': 'n', '%5': 'o',
        '&6': 'p', '*7': 'q', '!8': 'r', '?9': 's', '+0': 't',
        '-1': 'u', '=2': 'v', '@3': 'w', '#4': 'x', '$5': 'y',
        '&6': 'z', '_': ' '
    }

    mensaje = ''
    i = 0
    while i < len(mensaje_encriptado):
        codigo = mensaje_encriptado[i:i + 2]
        if codigo in diccionario:
            mensaje += diccionario[codigo]
            i += 2
        else:
            mensaje += mensaje_encriptado[i]
            i += 1
    return mensaje


