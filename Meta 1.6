import pandas as pd
def procesar_cotizacion(ruta_archivo):
    df = pd.read_csv(ruta_archivo, sep=';', decimal=',', thousands='.')

    df_estadisticas = pd.DataFrame({
        'Mínimo': df.select_dtypes(include=['number']).min(),
        'Máximo': df.select_dtypes(include=['number']).max(),
        'Media': df.select_dtypes(include=['number']).mean()
    })
    return df, df_estadisticas

